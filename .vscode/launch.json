{
  "configurations": [




    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },

    {
    "type": "node",
    "request": "launch",
      "name": "Debug Node Server",
       "program": "${workspaceFolder}/server.js",
    "env": {
        "DEBUG": "*"
    },
    "console": "integratedTerminal"
},

{
  "name": "Launch Program",
  "program": "${workspaceFolder}/server.js",
  "request": "launch",
  "skipFiles": [
    "<node_internals>/**",
    "node_modules/**/*.js"
  ],
  "type": "node",
  "env": {
    "DEBUG": "*"
  },
  "console": "integratedTerminal"
}
  ]
}
